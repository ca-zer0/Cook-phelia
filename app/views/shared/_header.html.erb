<%= stylesheet_link_tag 'shared/header', :media => "all", 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'header' %>


<header class='header'>
  <%= link_to 'Cook-phelia', root_path , class: "header-title" %>
  <div class='user'>
    <ul class='user-nav'>
      <li class='header-nav-btn' id="lists">
      <img src="/assets/user.jpg" height="70" width="70" class="user-btn" alt="User">
      </li>
    </ul>
    <ul class="show-lists hidden" id="pull-down">
      <li class="header-pull-down-list">編集</li>
      <li class="header-pull-down-list">ログアウト</li>
    </ul>
  </div>
  <div class='header-screen'>
    <h2 class='screen-title'>
    マイレシピ
    </h2>
  </div>
  <div class='nav'>
    <ul class='lists-bar'>
      <li class="header-lists-btn" id="btn">
      ≡
      </li>
    </ul>
    <ul class="header-show-lists hidden" id="down-lists">
      <li class="header-list-down">
      <%= link_to 'マイレシピ', recipes_path, class: 'header-path' %>
      </li>
      <li class="header-list-down">
      <%= link_to '買い物リスト', lists_path, class: 'header-path' %>
      </li>
    </ul>
  </div>
</header>